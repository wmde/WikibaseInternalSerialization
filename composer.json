{
	"name": "wikibase/internal-serialization",
	"type": "library",
	"description": "Serializers and deserializers for the data access layer of Wikibase Repository",
	"keywords": [
		"wikibase",
		"DataModel",
		"serializers",
		"serialization",
		"deserializers",
		"wikidata"
	],
	"homepage": "https://github.com/wmde/WikibaseInternalSerialization",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "http://jeroendedauw.com"
		}
	],
	"support": {
		"irc": "irc://irc.freenode.net/wikidata"
	},
	"require": {
		"php": ">=5.5.9",
		"wikibase/data-model": "~7.0|~6.0|~5.0|~4.2",
		"wikibase/data-model-serialization": "~2.0",
		"serialization/serialization": "~3.2"
	},
	"require-dev": {
		"phpmd/phpmd": "~2.3",
		"phpunit/phpunit": "~4.8",
		"data-values/common": ">=0.1 <0.5",
		"data-values/geo": ">=1.0 <3.0",
		"data-values/number": ">=0.1 <0.10",
		"data-values/time": ">=0.1 <0.9",
		"wikibase/wikibase-codesniffer": "^0.1.0"
	},
	"autoload": {
		"psr-4": {
			"Wikibase\\InternalSerialization\\": "src/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "2.5.x-dev"
		}
	},
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"phpunit"
		],
		"cs": [
			"phpcs -p -s",
			"phpmd src/ text phpmd.xml"
		],
		"ci": [
			"@cs",
			"@test"
		]
	}
}
